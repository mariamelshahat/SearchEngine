@model IEnumerable<SearchResult>

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold text-primary">Goocle – Semantic Web Search</h1>
        <p class="lead text-muted">Search for keywords in web pages ranked by relevance</p>
    </div>

    <!-- Search Card -->
    <div class="card mx-auto shadow-sm border-0 mb-5" style="max-width: 700px;">
        <div class="card-body py-4 px-4">
            <form method="get" asp-action="Search" id="search-form">
                <div class="mb-3">
                    <input type="text" name="query" class="form-control form-control-lg rounded-3 text-center"
                           placeholder="Type a keyword to search..."
                           value="@Context.Request.Query["query"]" />
                </div>
                <div class="d-flex justify-content-center gap-3 mt-3">
                    <button type="submit" class="btn btn-primary px-4 rounded-3 shadow-sm" name="sortBy" value="">🔍 Search</button>
                    <button type="submit" class="btn btn-outline-secondary px-4 rounded-3 shadow-sm" name="sortBy" value="count">📊 Sort by Count</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Search Results -->
    @if (Model != null && Model.Any())
    {
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Search Results</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped table-bordered mb-0 align-middle">
                        <thead class="table-light text-center">
                            <tr>
                                <th scope="col">Count</th>
                                <th scope="col">URL</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var result in Model)
                            {
                                <tr>
                                    <td class="text-center">@result.Count</td>
                                    <td><a href="@result.Url" target="_blank" class="text-decoration-none">@result.Url</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else if (Context.Request.Query.ContainsKey("query"))
    {
        <div class="alert alert-info text-center mt-4 shadow-sm">
            No results found.
        </div>
    }
</div>

<!-- Audio Element for Sound -->
<audio id="search-sound" src="~/sounds/WhatsApp Audio 2025-05-06 at 17.35.29_e3251f8a.mp3" preload="auto"></audio>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById("search-form");
            const sound = document.getElementById("search-sound");

            if (form && sound) {
                form.addEventListener("submit", function (event) {
                    event.preventDefault();  // Prevent the form from submitting immediately

                    // Play the sound
                    sound.play();

                    // Wait for the sound to finish before submitting the form
                    sound.onended = function () {
                        form.submit();  // Now submit the form after the sound ends
                    };
                });
            }
        });
    </script>
}
